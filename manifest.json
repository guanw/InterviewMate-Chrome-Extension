{
  "manifest_version": 3,
  "name": "Code Productivity Suite",
  "version": "1.0.0",
  "description": "Enhances coding experience with productivity features and code analysis tools",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": ["http://localhost:8080/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["constants.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Productivity Booster"
  },
  "web_accessible_resources": [
    {
      "resources": ["content-script.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
